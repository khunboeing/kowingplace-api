{
  "name": "kowingplace-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:soAcademy/kowingplace-api.git",
  "author": "Napatpimon Ponpathanapaisarn <napatpimon.pon@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register src/main.ts",
    "start": "ts-node -r tsconfig-paths/register src/main",
    "prisma:merge": "cat prisma/schema/**.prisma > prisma/schema.prisma",
    "prisma:format": "npx prisma format",
    "prisma:migrate": "npx prisma migrate dev --name init --schema prisma/schema.prisma",
    "prisma:generate": "yarn pnpify prisma generate --schema=prisma/schema.prisma",
    "test": "jest --verbose",
    "test:trivia": "jest -- src/trivia",
    "test:twitter": "jest -- src/twitter",
    "build": "rimraf dist && tsc"
  },
  "dependencies": {
    "@prisma/client": "4.11.0",
    "@types/cors": "^2.8.13",
    "@yarnpkg/pnpify": "^4.0.0-rc.39",
    "axios": "^1.3.4",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fp-ts": "^2.13.1",
    "io-ts": "^2.2.20",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.9.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.14.0",
    "@types/pg": "^8.6.6",
    "jest": "^29.5.0",
    "prisma": "^4.11.0",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
